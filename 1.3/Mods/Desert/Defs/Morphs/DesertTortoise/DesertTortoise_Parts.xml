<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Tachyonite/Pawnmorpher/dev/Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef ParentName="TestudinidaeJawPart">
		<classInfluence>PMAE_DesertTortoiseMorph</classInfluence>
		<defName>PMAE_DesertTortoiseMuzzle</defName>
		<label>desert tortoise muzzle</label>
		<graphics>
			<Muzzle>Parts/Desert/DesertTortoise/DesertTortoise_Muzzle</Muzzle>
		</graphics>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="TestudinidaeTailPart">
		<classInfluence>PMAE_DesertTortoiseMorph</classInfluence>
		<defName>PMAE_DesertTortoiseTail</defName>
		<label>desert tortoise tail</label>
		<graphics>
			<Tail>Parts/Desert/DesertTortoise/DesertTortoise_Tail</Tail>
		</graphics>
		<stagePatches>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<description>A short tail has sprouted from the base of [PAWN_nameDef]'s spine. Long enough that it requires some clothing modifications, but too short to be useful for much else.</description>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName ="PawnmorphShell">
		<defName>EtherDesertTortoiseShell</defName>
		<classInfluences>
			<li>PMAE_DesertTortoiseMorph</li>
		</classInfluences>
		<label>desert tortoise shell</label>
		<stagePatches>
			<li function="modify">
				<stageKey>growing</stageKey>
				<values>
					<graphics>
						<Spines>Parts/Desert/DesertTortoise/DesertTortoise_Shell</Spines>
						<SpinesBehind>Parts/Desert/DesertTortoise/DesertTortoise_Shell_Behind</SpinesBehind>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<graphics>
						<Spines>Parts/Desert/DesertTortoise/DesertTortoise_Shell</Spines>
						<SpinesBehind>Parts/Desert/DesertTortoise/DesertTortoise_Shell_Behind</SpinesBehind>
					</graphics>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<graphics>
						<Spines>Parts/Desert/DesertTortoise/DesertTortoise_Shell</Spines>
						<SpinesBehind>Parts/Desert/DesertTortoise/DesertTortoise_Shell_Behind</SpinesBehind>
					</graphics>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>
</Defs>
