<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Tachyonite/Pawnmorpher/dev/Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name ="PenguinJawPart" ParentName="AvianJawPart" Abstract="true">
		<stagePatches>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<statOffsets>
						<ButcheryFleshEfficiency>0.1</ButcheryFleshEfficiency>
					</statOffsets>
					<capMods>
						<li>
							<capacity>Talking</capacity>
							<offset>-0.2</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<statOffsets>
						<ButcheryFleshEfficiency>0.3</ButcheryFleshEfficiency>
					</statOffsets>
					<capMods>
						<li>
							<capacity>Talking</capacity>
							<offset>-0.1</offset>
						</li>
						<li>
							<capacity>Eating</capacity>
							<offset>0.1</offset>
						</li>
					</capMods>
				</values>
			</li>
			<li function="modify">
				<stageKey>paragon</stageKey>
				<values>
					<statOffsets>
						<ButcheryFleshEfficiency>0.35</ButcheryFleshEfficiency>
					</statOffsets>
					<capMods>
						<li>
							<capacity>Eating</capacity>
							<offset>0.2</offset>
						</li>
					</capMods>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef Name ="PenguinTailPart" ParentName="AvianTailPart" Abstract="true">
		<stagePatches>
			<li function="modify">
				<stageKey>growing</stageKey>
				<values>
					<statOffsets>
						<CookSpeed>+0.025</CookSpeed>
					</statOffsets>
				</values>
			</li>
			<li function="modify">
				<stageKey>grown</stageKey>
				<values>
					<statOffsets>
						<CookSpeed>+0.05</CookSpeed>
					</statOffsets>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="PawnmorphArmPart">
		<defName>EtherFlipperWing</defName>
		<label>flipper</label>
		<description>A flipper.</description>
		<classInfluence>Penguin</classInfluence>
		<!-- <mutationTale>TODO</mutationTale>
		<mutationMemory>TODO</mutationMemory> -->
		<stagePatches>
			<li function="modify">
				<stageKey>readjusting</stageKey>
				<values>
					<description>[PAWN_nameDef]'s arm is significantly stiffer and visibly longer then before.</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>unfamiliar</stageKey>
				<values>
					<description>TODO</description>
				</values>
			</li>
			<li function="modify">
				<stageKey>adapting</stageKey>
				<values>
					<description>[PAWN_nameDef]'s arm has contorted into the shape of an avian wing, complete with hollow bones.  It'll take some time for [PAWN_objective] to get used to them again.</description>

				</values>
			</li>
			<li function="modify">
				<stageKey>adapted</stageKey>
				<values>
					<description>[PAWN_nameDef]'s arm has contorted into the shape of an avian wing, complete with hollow bones.  [PAWN_pronoun] has adapted to using them, but the hollow bones limit [PAWN_possessive] ability to lift heavy things.</description>

				</values>
			</li>
		</stagePatches>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationDependency">
				<mutationDependency>
					<hediff>EtherWingTip</hediff>
					<mtbDays>3</mtbDays>
					<chance>5</chance>
					<partsToAffect>
						<li>Hand</li>
					</partsToAffect>
					<countToAffect>2</countToAffect>
					<memory>WingTipMemory</memory>
					<tale>HandsBecomeWingTips</tale>
				</mutationDependency>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>

	<!-- Insulating Feathers -->

	<Pawnmorph.Hediffs.MutationDef ParentName="AbstractFeatheredLimb" Name="InsulatingFeatheredLimb">
		<defName>EtherInsulatingFeatheredLimb</defName>
		<label>insulating feathers</label>
		<classInfluence>Penguin</classInfluence>
		<stagePatches>
			<li function="modify">
				<stageKey>dusting</stageKey>
				<values>
					<statOffsets>
						<ComfyTemperatureMin>-1.75</ComfyTemperatureMin>
						<ComfyTemperatureMax>-0.375</ComfyTemperatureMax>
					</statOffsets>
				</values>
			</li>
			<li function="modify">
				<stageKey>thin</stageKey>
				<values>
					<statOffsets>
						<ComfyTemperatureMin>-3.5</ComfyTemperatureMin>
						<ComfyTemperatureMax>-0.75</ComfyTemperatureMax>
					</statOffsets>
				</values>
			</li>
			<li function="modify">
				<stageKey>patches</stageKey>
				<values>
					<description>Swathes: Much of the skin here is covered in insulating feathers, needing to be preened and attended to with the occassional dust bath. They'll keep a fair amount of heat close to the body.</description>
					<statOffsets>
						<ComfyTemperatureMin>-5.25</ComfyTemperatureMin>
						<ComfyTemperatureMax>-1.125</ComfyTemperatureMax>
					</statOffsets>
				</values>
			</li>
			<li function="modify">
				<stageKey>full</stageKey>
				<values>
					<description>The skin here is entirely covered in feathers, needing to be preened and attended to with the occassional dust bath. They'll keep quite a bit of heat close to the body.</description>
					<statOffsets>
						<ComfyTemperatureMin>-7</ComfyTemperatureMin>
						<ComfyTemperatureMax>-1.5</ComfyTemperatureMax>
					</statOffsets>
				</values>
			</li>
		</stagePatches>
	</Pawnmorph.Hediffs.MutationDef>

</Defs>