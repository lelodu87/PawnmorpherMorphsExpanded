<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Tachyonite/Pawnmorpher/dev/Schemas/ThoughtDef.xsd">
	<ThoughtDef ParentName="OutlookMemoryBase">
		<defName>PME_ZebraTransformationMemory</defName>
        <stages>
            <li>
                <label>morphed</label>
                <description>This is an asset to the colony...</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>I'm so strong! I could easily lift a whole horse above my head!</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>Neigh! I do not want this!</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>I can't wait to test my might!</description>
                <baseMoodEffect>+1</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>PME_ZebraRevertedMemory</defName>
        <stages>
            <li>
                <label>reverted</label>
                <description>Alright, time for the old me again.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>I can feel my might, fading!</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>My ankles were killing me in those heels!</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>I feel so weak, can I even lift a bed anymore?</description>
				<baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
</Defs>