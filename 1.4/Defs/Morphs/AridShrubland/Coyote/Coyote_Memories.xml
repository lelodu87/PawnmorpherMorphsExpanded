<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/Tachyonite/Pawnmorpher/dev/Schemas/ThoughtDef.xsd">
	<ThoughtDef ParentName="OutlookMemoryBase">
		<defName>PME_CoyoteTransformationMemory</defName>
        <stages>
            <li>
                <label>morphed</label>
                <description>I really want to talk....like a lot.</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>I can't wait to share all the important things I have to say!</description>
                <baseMoodEffect>+3</baseMoodEffect>
            </li>
            <li>
                <label>morphed</label>
                <description>Even I don't want to hear myself talk any longer...</description>
                <baseMoodEffect>-5</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
    <ThoughtDef ParentName="OutlookMemoryBase">
		<defName>PME_CoyoteRevertedMemory</defName>
        <stages>
            <li>
                <label>reverted</label>
                <description>Having that keen a sense of smell wasn't always a blessing.</description>
                <baseMoodEffect>3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>I got a permanent tongue tie...</description>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
            <li>
                <label>reverted</label>
                <description>Peace and quiet at last!</description>
                <baseMoodEffect>10</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
	<ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>PME_CoyoteMuzzle</defName>
        <stages>
            <li>
                <label>Coyote snout</label>
                <description>So many new smells...is that bacon?</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Coyote snout</label>
                <description>I think I can smell a road runner already!</description>
                <visible>true</visible>
                <baseMoodEffect>2</baseMoodEffect>
            </li>
            <li>
                <label>Coyote snout</label>
                <description>Please get this horrible animal appendage off my face!</description>
                <visible>true</visible>
                <baseMoodEffect>-3</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>PME_CoyoteEar</defName>
        <stages>
            <li>
                <label>Coyote ears</label>
                <description>I think I can hear a road runner...</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Coyote ears</label>
                <description>I'll catch that big bird with these for sure!</description>
                <visible>true</visible>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
            <li>
                <label>Coyote ears</label>
                <description>What was wrong with some silence for once?!</description>
                <visible>true</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
    <ThoughtDef ParentName="OutlookMemoryBase">
        <durationDays>1</durationDays>
        <defName>PME_CoyoteTail</defName>
        <stages>
            <li>
                <label>Coyote tail</label>
                <description>It sure is very fluffy!</description>
                <visible>true</visible>
                <baseMoodEffect>-1</baseMoodEffect>
            </li>
            <li>
                <label>Coyote tail</label>
                <description>It's SO fluffy!</description>
                <visible>true</visible>
                <baseMoodEffect>1</baseMoodEffect>
            </li>
            <li>
                <label>Coyote tail</label>
                <description>Now everyone will think I'm one of THOSE PEOPLE.</description>
                <visible>true</visible>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
	
</Defs>